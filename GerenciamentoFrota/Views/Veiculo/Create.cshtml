@model GerenciamentoFrota.Models.Veiculo


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
    
    
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        
<div class="form-horizontal text-center">
	@Html.ValidationMessage("Existe", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(model => model.Chassi, htmlAttributes: new { @class = "control-label col-md-4" })
		<div class="col-md-4">
			@Html.EditorFor(model => model.Chassi, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Chassi, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-4" })
		<div class="col-md-4">
			@Html.DropDownListFor(model => model.Tipo, new SelectList(new string[] { "", "Caminhão", "Ônibus" }, ""), htmlAttributes: new { @class = "form-control", onchange = "verificar();" })
			@Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Passageiros, htmlAttributes: new { @class = "control-label col-md-4" })
		<div class="col-md-4">
			@Html.TextBoxFor(model => model.Passageiros, new { @class = "form-control", @readonly = "readonly" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "control-label col-md-4" })
		<div class="col-md-4">
			@Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-4 col-md-4">
			@Html.ActionLink("Cancelar", "Index", "", new { @class="btn btn-danger btn-lg" })
			<input type="submit" value="Confirmar" class="btn btn-success btn-lg" />
		</div>
	</div>
</div>
}

